{% extends 'base.html.twig' %}

{% form_theme delete_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block title %}
    {{ 'visualisation du type de prestation annexe' | capitalize }}
{% endblock %}
{% block body %}
    <h1>{{ 'Visualisation du type de prestation annexe' | capitalize }}</h1>

    {% include '::flashbags.html.twig' %}
    <table class="table table-responsive table-striped">
        <tbody>
        <tr class="row">
            <th class="col-sm-1">Id</th>
            <td>{{ typePrestationAnnexe.id }}</td>
        </tr>
        {% for traduction in typePrestationAnnexe.traductions %}
            {% if traduction.langue.code == app.request.locale %}
                <tr class="row">
                    <th class="col-sm-1">{{ 'libelle' | capitalize }}</th>
                    <td>
                        {{ traduction.libelle }}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}

        </tbody>
    </table>
    <div class="panel panel-primary">
        <div class="panel-heading"><h3 class="panel-title">
                Sous-types de la prestation annexe
            </h3>
        </div>
        <div class="panel-body">
            {# liste des images #}

            {% if  typePrestationAnnexe.sousTypePrestationAnnexes is not empty %}
            <ul class="sous_type_prestation_annexe"
                    {#style="list-style-type: none;"#}
            >
                {% for sousTypePrestationAnnexe in typePrestationAnnexe.sousTypePrestationAnnexes %}
                    {% for traduction in sousTypePrestationAnnexe.traductions %}
                        {% if traduction.langue.code == app.request.locale %}
                            <li class="element">
                                {{ traduction.libelle }}
                            </li>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </ul>
            {% else %}
                <div class="alert alert-info" role="alert">Pas de sous-types.</div>
            {% endif %}
        </div>
    </div>
    <div style="text-align: right">

        <ul class="list-unstyled">
            <li>
                <a href="{{ path('typeprestationannexe_index') }}">Retour Ã  la liste</a>
            </li>
            <li>
                <a class="btn btn-default"
                   href="{{ path('typeprestationannexe_edit', { 'id': typePrestationAnnexe.id }) }}">Modifier</a>
            </li>
        </ul>
    </div>
{% endblock %}
