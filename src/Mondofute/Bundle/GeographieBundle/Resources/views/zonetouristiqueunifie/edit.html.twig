    {% form_theme delete_form  'bootstrap_3_horizontal_layout.html.twig' %}

    {% include '::flashbags.html.twig' %}
    {{ form_errors(edit_form) }}
    {{ form_start(edit_form) }}
    {% include '::coches_sites.html.twig' %}
    {#{% for site in sites %}#}
    {#<input id="siteAEnregistrer_{{ site.id }}" data-site-id="{{ site.id }}" type="checkbox" name="sites[]"#}
    {#value="{{ site.id }}">{{ site.libelle }}#}
    {#{% endfor %}#}

    {% set zoneTouristique = edit_form.zoneTouristiques | first %}
    {# ajout des attributs "communs" #}
    {#<div>#}
    {#{{ form_row( zoneTouristique.nbVache ) }}#}
    {#{{ form_row( zoneTouristique.nbHabitant ) }}#}
    {#</div>#}
    {% set mesSites = edit_form.zoneTouristiques %}
    {% include '::onglets_sites.html.twig' %}
    {#<ul class="nav nav-tabs">#}
    {#{% set iSite = 0 %}#}
    {#{% for zoneTouristique in edit_form.zoneTouristiques %}#}
    {#<li id="menu_zoneTouristique_site_{{ zoneTouristique.vars.value.site.id }}"#}
    {#{% if(iSite==0) %}class="active"{% set iSite = 1 %}{% endif %}>#}
    {#<a data-toggle="tab"#}
    {#href="#zoneTouristique_site_{{ zoneTouristique.vars.value.site.id }}">#}
    {#{{ zoneTouristique.vars.value.site.libelle }}#}
    {#</a>#}
    {#</li>#}
    {#{% endfor %}#}
    {#</ul>#}

    <div class="tab-content" style="padding:20px;">

        {% set iSite = 0 %}
        {% for zoneTouristique in edit_form.zoneTouristiques %}
            <div id="data_site_{{ zoneTouristique.vars.value.site.id }}"
                 class="{% if(iSite==0) %}active{% set iSite = 1 %}{% endif %} tab-pane fade in">
                {{ form_row(zoneTouristique.site) }}
                <ul class="nav nav-tabs">
                    {% set iTraduc = 0 %}
                    {% for traduction in zoneTouristique.traductions %}
                        <li {% if(iTraduc==0) %}class="active"{% set iTraduc = 1 %}{% endif %}>
                            <a data-toggle="tab"
                               href="#{{ zoneTouristique.vars.value.site.id }}_{{ traduction.vars.value.langue.id }}">
                                {# affiche la langue en fonction de la locale#}
                                {% for traductionLangue in  traduction.vars.value.langue.traductions %}
                                    {% if(traductionLangue.langueTraduction.code == app.request.locale) %}
                                        {{ traductionLangue.libelle }}
                                    {% endif %}
                                {% endfor %}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="tab-content">
                    {% set iTraduc = 0 %}
                    {% for traduction in zoneTouristique.traductions %}
                        <div id="{{ zoneTouristique.vars.value.site.id }}_{{ traduction.vars.value.langue.id }}"
                             class="{% if(iTraduc==0) %}active{% set iTraduc = 1 %}{% endif %} tab-pane fade in">
                            {#{{ form_row(traduction) }}#}
                            {{ form_widget(traduction) }}
                            {{ form_errors(traduction) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    {{ form_row(edit_form.submit) }}
    {{ form_row(edit_form._token) }}
    {{ form_end(edit_form, {'render_rest': false}) }}
{% endblock %}

