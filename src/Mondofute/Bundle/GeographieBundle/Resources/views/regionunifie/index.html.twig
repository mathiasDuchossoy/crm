{% extends 'base.html.twig' %}

{% block body %}
    <h1>RegionUnifie list</h1>

    <table class="table-responsive table-striped table">
        <thead>
        <tr>
            <th>Id</th>
            <th>{{ 'libelle' | capitalize }}</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for regionUnifie in regionUnifies %}
            <tr>
                <td><a href="{{ path('geographie_region_show', { 'id': regionUnifie.id }) }}">{{ regionUnifie.id }}</a>
                </td>
                <td>
                    {% for region in regionUnifie.regions %}
                        {% if region.site.crm == 1 %}
                            {% for traduction in region.traductions %}
                                {% if traduction.langue.code == app.request.locale %}
                                    {{ traduction.libelle }}
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('geographie_region_show', { 'id': regionUnifie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('geographie_region_edit', { 'id': regionUnifie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('geographie_region_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
