<div class="row">
    <div class="form-group col-sm-4" id="jours">
        <div class="form-group">
            {{ form_label(form.jour,('jours' | trans) ) }}
        </div>
        {% for i in 1..6 %}
            <div class="row">
                <div class="form-group col-sm-12">
                    <label for="fournisseur_reception_jour_{{ i }}">
                        <input type="checkbox" value="{{ i }}" name="fournisseur[reception][jour][]"
                               id="fournisseur_reception_jour_{{ i }}"/>
                        {{ ('jour.'~i~'.libelle') | trans | capitalize }}
                    </label>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="form-group col-sm-12">
                <label for="fournisseur_reception_jour_0">
                    <input type="checkbox" value="0" name="fournisseur[reception][jour][]"
                           id="fournisseur_reception_jour_0"/>
                    {{ ('jour.0.libelle') | trans | capitalize }}
                </label>
            </div>
        </div>
    </div>
    <div class="form-group col-sm-8">
        <div class="form-group row">
            <div class="col-sm-3">
                {{ form_label(form.tranche1) }}
            </div>
            <div class="col-sm-9">
                <div class="form-group">
                    {{ form_label(form.tranche1.debut) }}
                    {{ form_widget(form.tranche1.debut) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.tranche1.fin) }}
                    {{ form_widget(form.tranche1.fin) }}
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                {{ form_label(form.tranche2) }}
            </div>
            <div class="col-sm-9">
                <div class="form-group">
                    {{ form_label(form.tranche2.debut) }}
                    {{ form_widget(form.tranche2.debut) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.tranche2.fin) }}
                    {{ form_widget(form.tranche2.fin) }}
                </div>
            </div>
        </div>
    </div>
</div>