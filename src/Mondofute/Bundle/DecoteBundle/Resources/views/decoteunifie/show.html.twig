{% extends 'base.html.twig' %}

{% form_theme delete_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block title %}
    {{ 'visualisation de la decote' | capitalize }}
{% endblock %}
{% block body %}
    <h1>{{ 'Visualisation de la decote' | capitalize }}</h1>
    {% include '::flashbags.html.twig' %}
    <table class="table table-responsive table-striped">
        <tbody>
        <tr class="row">
            <th class="col-sm-1">Id</th>
            <td>{{ decoteUnifie.id }}</td>
        </tr>
        {% for decote in decoteUnifie.decotes %}
            {% if decote.site.crm == 1 %}
                <tr class="row">
                    <th class="col-sm-1">{{ 'libelle' | capitalize }}</th>
                    <td>
                        {{ decote.libelle }}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}

        </tbody>
    </table>
    <div style="text-align: right">

        <ul class="list-unstyled">
            <li>
                <a href="{{ path('decote_index') }}">{{ 'retour.liste' | trans }}</a>
            </li>
            <li>
                <a class="btn btn-default"
                   href="{{ path('decote_edit', { 'id': decoteUnifie.id }) }}">{{ 'modifier' | trans }}</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                {#<input type="submit" value="Delete">#}
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
