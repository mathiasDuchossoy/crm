<div id="modal_commande_ligne_sejour_periode" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajout d'un séjour période</h4>
            </div>
            <div id="modal_body_commande_ligne_sejour_periode" class="modal-body">
                <form class="form-horizontal">
                    <div id="rechercherLogement">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="rechercher_logement_station">Station</label>
                            <div class="col-sm-10">
                                <select id="rechercher_logement_station"
                                        class="form-control">
                                    <option value=""> --- Choisir une station ---</option>
                                    {% for station in stations %}
                                        <option value="{{ station['id'] }}">{{ station['libelle'] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="rechercher_logement_fournisseur">Fournisseur</label>
                            <div class="col-sm-10">
                                <select id="rechercher_logement_fournisseur"
                                        class="form-control">
                                    <option value=""> --- Choisir un fournisseur ---</option>
                                    {% for fournisseur in fournisseurs %}
                                        <option value="{{ fournisseur.id }}">{{ fournisseur.enseigne }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="rechercher_logement_hebergement">Hébergement</label>
                        <div class="col-sm-10">
                            <select id="rechercher_logement_hebergement" class="form-control">
                            </select>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="rechercher_logement_logement">Logement</label>
                        <div class="col-sm-10">
                            <select id="rechercher_logement_logement" class="form-control">
                            </select>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="rechercher_logement_periode">Période</label>
                        <div class="col-sm-10">
                            <select id="rechercher_logement_periode" class="form-control">
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary" id="addCommandeLigneSejourPeriode">Ajouter</button>
            </div>
        </div>
    </div>
</div>
